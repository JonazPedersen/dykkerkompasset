<html class="no-js" lang="en" dir="ltr">
@using DKrepo
@model SpotVM
@{
    ViewBag.Title = "ShowSpot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (Billeder b in Model.billeder)
{
    @b.Filnavn
}

<div class="row">
    <table>
        <tr>
            <td class="small-12.columns">@Model.spot.Navn</td>
            <td class="large-6 medium-6 small-12.columns"><img src="~/Content/Billeder/Billeder/@Model.spot.Billede" /></td>
            <td class="large-6 medium-6 small-12.columns">@Model.spot.Beskrivelse</td>
        </tr>
    </table>
</div>


